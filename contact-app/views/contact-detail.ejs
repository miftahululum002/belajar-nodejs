<div class="container mt-3">
  <div class="row">
    <div class="col-md-8">
      <h2>Contact Detail</h2>
      <% if (!contact) { %>
      <div class="alert alert-danger fw-bold" role="alert">
        Data contact tidak ada<br />
        <a href="/contact" class="alert-link fw-light">&laquo; Kembali</a>
      </div>
      <% }else{ %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= contact.name %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><%=contact.nohp%></h6>
          <p class="card-text"><%=contact.email%></p>
          <a class="card-link" href="/contact">&laquo; Kembali</a>
        </div>
      </div>
      <% } %>
    </div>
  </div>
</div>
