<div class="container mt-3">
  <div class="col-md-8">
    <a href="/product/add" class="btn btn-primary btn-sm rounded-0 mb-2"
      >Tambah Data</a
    >
    <% if (msg.length !==0) { %>
    <div class="alert alert-success" role="alert"><%=msg %></div>
    <% } %>
    <table class="table table-bordered">
      <thead>
        <tr>
          <th>No</th>
          <th>Kode</th>
          <th>Nama</th>
          <th>Harga</th>
          <th>Deskripsi</th>
          <th>Opsi</th>
        </tr>
      </thead>
      <tbody>
        <% if (products.length == 0) { %>
        <tr>
          <td colspan="4">
            <div class="alert alert-danger fw-bold" role="alert">
              Data contact masih kosong
            </div>
          </td>
        </tr>
        <% }else{ %> <% products.forEach((product,i) => { %>
        <tr>
          <td><%=(i+1)%></td>
          <td><%=product.code %></td>
          <td><%=product.name %></td>
          <td><%=product.price %></td>
          <td><%=product.description %></td>
          <td>
            <a
              href="/product/<%=product.id%>"
              class="btn btn-primary badge rounded-pill"
              >Detail</a
            >
          </td>
        </tr>
        <% }) } %>
      </tbody>
    </table>
  </div>
</div>
