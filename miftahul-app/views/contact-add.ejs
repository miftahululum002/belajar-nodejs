<div class="container">
  <div class="row">
    <div class="col-md-6">
      <h3>Form Tambah Contact</h3>
      <% if (error.length !== 0) { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% error.forEach(err => { %>
          <li><%=err.msg%></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form action="/contact" method="post">
        <div class="mb-3">
          <label for="name">Nama</label>
          <input
            type="text"
            name="name"
            id="name"
            class="form-control"
            placeholder="Nama"
            required
          />
        </div>
        <div class="mb-3">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="Email"
            class="form-control"
          />
        </div>
        <div class="mb-3">
          <label for="nohp">No HP</label>
          <input
            type="text"
            name="nohp"
            id="nohp"
            class="form-control"
            required
            placeholder="No HP"
          />
        </div>
        <button type="submit" class="btn btn-primary btn-sm rounded-0">
          Simpan
        </button>
      </form>
    </div>
  </div>
</div>
